<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dip"
    android:layout_height="fill_parent"
    android:background="#e7eaee"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dp"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dip"
            android:scaleType="centerCrop"
            android:src="@drawable/setting"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lin_user"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="30dip"
            android:background="@drawable/circle"
            android:orientation="vertical" >

            <com.doubook.view.CircularImage
                android:id="@+id/user_photo"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="centerCrop"
                android:background="@drawable/touxiang" />
        </LinearLayout>

        <TextView
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_user"
            android:layout_marginBottom="10dip"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="#1a1a1a"
            android:textSize="15dip" >
        </TextView>

        <TextView
            android:id="@+id/desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_marginBottom="10dip"
            android:gravity="center"
            android:textColor="#1a1a1a"
            android:textSize="14dip" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_list_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_layout"
        android:layout_marginTop="5.0dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_wish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/l3"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="20dip"
            android:paddingLeft="20dip"
            android:paddingTop="20dip"
            android:text="想读的书籍"
            android:textColor="#1a1a1a"
            android:textSize="15dip" >
        </TextView>

        <TextView
            android:id="@+id/txt_reading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/l2"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="20dip"
            android:paddingLeft="20dip"
            android:paddingTop="20dip"
            android:text="在读的书籍"
            android:textColor="#1a1a1a"
            android:textSize="15dip" >
        </TextView>

        <TextView
            android:id="@+id/txt_read"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/l1"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:paddingBottom="20dip"
            android:paddingLeft="20dip"
            android:paddingTop="20dip"
            android:text="读过的书籍"
            android:textColor="#1a1a1a"
            android:textSize="15dip" >
        </TextView>
    </LinearLayout>

</RelativeLayout>