<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tel_popup_window_main"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#7FB80F"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingRight="5dp" >

        <ImageView
            android:id="@+id/image_sao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/saosao"
            android:visibility="visible" />

        <EditText
            android:id="@+id/search_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="10"
            android:background="@drawable/login_editbox"
            android:drawableLeft="@drawable/search_in"
            android:drawablePadding="10dp"
            android:hint="书名、ISBN"
            android:imeOptions="actionGo"
            android:inputType="text"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="18.0sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/list_search_contact"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:descendantFocusability="blocksDescendants"
        android:divider="@drawable/divider_line"
        android:dividerHeight="1.0dip"
        android:fastScrollEnabled="true" />

</LinearLayout>